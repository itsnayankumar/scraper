# --- ADMIN ACCESS ---
# The username and password to log into the web dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# --- TELEGRAM CONFIGURATION ---
# Get these from https://my.telegram.org
API_ID=12345678
API_HASH=your_api_hash_here

# Get this from @BotFather
BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Your Personal User ID (Get from @userinfobot)
OWNER_ID=123456789

# The Channel ID where links will be posted (Must start with -100)
AUTH_CHANNEL=-100123456789

# --- SITE CONFIGURATION ---
# The URL of the 4kHDHub site (Change this if they switch domains)
MAIN_SITE_URL=https://4khdhub.dad

# The URL of the Mediator site (Change if redirected)
MEDIATOR_DOMAIN=cryptoinsights.site

# The URL of the HubDrive site
HUBDRIVE_DOMAIN=hubdrive.space

# --- FLASK CONFIGURATION ---
# A random string for security (You can generate one or just mash your keyboard)
SECRET_KEY=replace_this_with_a_long_random_string

# The Port to run on (Render automatically sets this to 10000, but good to have)
PORT=10000

# How often the bot checks for new movies (in minutes)
CHECK_INTERVAL_MINUTES=30
